# Telegram API Configuration
# Get these from https://my.telegram.org
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=

# TMDB Configuration (optional but recommended)
# Get your API key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=
# Language for TMDB results (default: it-IT for Italian)
TMDB_LANGUAGE=it-IT
# language for ReplayKeyboard (default: it for Italian)
DEFAULT_LANGUAGE=it

# Storage Paths
# These paths are used inside the container if using Docker
# For local usage, use absolute paths on your system
MOVIES_PATH=/media/movies
TV_PATH=/media/tv
TEMP_PATH=/media/temp

# User Authorization
# Comma-separated list of Telegram user IDs
# Leave empty to enable admin mode (first user becomes admin)
# Example: AUTHORIZED_USERS=123456789,987654321
AUTHORIZED_USERS=

# Download Settings
# Maximum number of simultaneous downloads
MAX_CONCURRENT_DOWNLOADS=3

# Space Management
# Minimum free space to maintain (in GB)
MIN_FREE_SPACE_GB=5

# Warning threshold for low space (in GB)
WARNING_THRESHOLD_GB=10

# How often to check for available space (in seconds)
SPACE_CHECK_INTERVAL=30

# Session Storage
# Path where bot session is stored
SESSION_PATH=/app/session/bot_session

# Docker Settings (if using Docker)
# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Timezone
TZ=UTC

# Subtitle Configuration
# Enable/disable subtitle system
SUBTITLE_ENABLED=false

# Auto-download subtitles after video download
SUBTITLE_AUTO_DOWNLOAD=false

# Preferred subtitle languages (comma-separated)
SUBTITLE_LANGUAGES=it,en

# Preferred subtitle format
SUBTITLE_FORMAT=srt

# OpenSubtitles credentials (optional, for better results)
OPENSUBTITLES_USERNAME=
OPENSUBTITLES_PASSWORD=
OPENSUBTITLES_USER_AGENT=MediaButler v1.0